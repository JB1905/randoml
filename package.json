{
  "name": "randoml",
  "version": "2.0.0",
  "description": "RandoML is a random number library with option to disable or increase number priority",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/randoml.cjs.js",
  "module": "lib/randoml.esm.js",
  "types": "lib/randoml.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randoml-js/randoml.git"
  },
  "keywords": [
    "TypeScript",
    "random",
    "number",
    "exclude",
    "library",
    "machine learning"
  ],
  "bugs": {
    "url": "https://github.com/randoml-js/randoml/issues"
  },
  "homepage": "https://github.com/randoml-js/randoml#readme",
  "dependencies": {
    "brain.js": "^1.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
