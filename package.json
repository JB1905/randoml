{
  "name": "randoml",
  "version": "1.0.0",
  "description": "RandoML is a library of random numbers with the option of excluding or increasing the priority of a number",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/randoml.min.js",
  "types": "lib/randoml.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/randoml.git"
  },
  "keywords": [
    "TypeScript",
    "random",
    "number",
    "exclude",
    "library",
    "machine learning"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/randoml/issues"
  },
  "homepage": "https://github.com/JB1905/randoml#readme",
  "dependencies": {
    "brain.js": "^1.6.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
