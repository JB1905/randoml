{
  "name": "randoml",
  "version": "1.0.0",
  "description": "RandoML is a library of random numbers with the option of excluding or increasing the priority of a number",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/randoml.cjs.js",
  "module": "lib/randoml.esm.js",
  "types": "lib/randoml.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/randoml.git"
  },
  "keywords": [
    "TypeScript",
    "random",
    "number",
    "exclude",
    "library",
    "machine learning"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/randoml/issues"
  },
  "homepage": "https://github.com/JB1905/randoml#readme",
  "dependencies": {
    "brain.js": "^1.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.7",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "brain.js": "^1.6.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
