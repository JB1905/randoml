{
  "name": "randoml",
  "version": "0.6.0",
  "description": "RandoML is a library of random numbers with the option of excluding or increasing the priority of a number",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/randoml.min.js",
  "types": "lib/randoml.d.ts",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/randoml.git"
  },
  "keywords": [
    "TypeScript",
    "random",
    "number"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/randoml/issues"
  },
  "homepage": "https://github.com/JB1905/randoml#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
